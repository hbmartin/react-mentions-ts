{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"noEmit": true,
		"types": ["node", "jest"]
	},
	"include": [
		"src",
		"jest",
		"*.config.ts",
		"scripts"
	],
	"exclude": [
		"dist",
		"coverage",
		"build",
		"node_modules",
		"demo",
		"tests",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"eslint.config.ts"
	]
}
