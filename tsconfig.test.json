{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "CommonJS",
		"noEmit": true,
		"types": ["node", "jest", "@testing-library/jest-dom"]
	},
	"include": [
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx",
		"jest/**/*.ts",
		"tests/**/*.ts",
		"tests/**/*.tsx"
	],
	"exclude": ["dist", "build", "coverage", "node_modules"]
}
