{
	"extends": "./tsconfig.base.json",
	"compilerOptions": {
		"module": "ESNext",
		"outDir": "./dist/esm",
		"noEmit": false
	},
	"include": ["src/**/*"],
	"exclude": [
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"**/__tests__/**",
		"**/__mocks__/**",
		"demo",
		"jest",
		"tests"
	]
}
